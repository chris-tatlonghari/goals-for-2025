<div class="goal-tracking-container">
    <div class="header">
        <div class="title">
            Goal Tracking
        </div>
    </div>
    <div class="content">

        <% @daily_goals.each do |goal|%>
            <div class="daily-goal-container">
                <span class="goal-title"><%= "Daily Progress" %></span>
                <div class="grid">
                    <% (0..52).each do |week| %>
                        <div class="week">
                            <% (1..7).each do |day| %>
                                <div class="day" goal-progress="<%= get_day_progess_value(week, day, goal) %>"></div>
                            <% end %>
                        </div>
                    <% end %>
                </div>
                <div class="goal-legend">
                    Less
                    <div class="day" goal-progress="0"></div>
                    <div class="day" goal-progress="1"></div>
                    <div class="day" goal-progress="2"></div>
                    <div class="day" goal-progress="3"></div>
                    <div class="day" goal-progress="4"></div>
                    More
                </div>
            </div>
        <% end %>
    </div>
</div>